<div class="page-header">
  <h1><%=t '.title', default: 'Search' %></h1>
</div>
<%= render :partial => 'form' %>

<ul>
  <% @invoices.each do |invoice| %>
    <li>
      <h3>
        <%= link_to invoice.try(:highlight).try(:invoicenumber) ? invoice.highlight.invoicenumber[0].html_safe : invoice.invoicenumber,
          controller: "invoices",
          action: "show",
          id: invoice._id%>
      </h3>
      <% if invoice.try(:highlight).try(:state) %>
        <% invoice.highlight.state.each do |snippet| %>
          <p><%= snippet.html_safe %>...</p>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
