<%- model_class = Document -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> <%= @attachment.document.name.titleize  %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @attachment.attachmentable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @attachment.document.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_file_name) %>:</strong></dt>
  <dd><%= link_to @attachment.document.document_file_name, @attachment.document.document.url, :target => "_blank"  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_content_type) %>:</strong></dt>
  <dd><%= @attachment.document.document_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_file_size) %>:</strong></dt>
  <dd><%= number_to_human_size(@attachment.document.document_file_size, precision: 2, separator: ',') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @attachment.document.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @attachment.document.updated_at.strftime("%Y-%m-%d %H:%M") %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), polymorphic_path(@attachmentable.class), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_polymorphic_path([@attachmentable, @attachment]), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")), polymorphic_path([@attachmentable, @attachment]), :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
