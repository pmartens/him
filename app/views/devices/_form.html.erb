<%= simple_form_for @device, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.association :manufacturer, label_method: :title, value_method: :id %>
  <%= f.association :device_type, label_method: :title, value_method: :id %>
  <%= f.input :device_model %>
  <%= f.input :serialnumber %>
  <%= f.input :servicetag %>
  <%= f.input :purchased_at, :as => :date_picker %>
  <%= f.input :color, :as => :minicolors, input_html: {data: {minicolors: {theme: :bootstrap, position: :left}}}  %>
  <%= f.input :number_of_cpu, collection: 1..12 %>
  <%= f.association :cpu, label_method: :title, value_method: :id %>
  <%= f.input :number_of_mem, collection: 1..12 %>
  <%= f.association :memory_module, label_method: :title, value_method: :id  %>
  <%= f.input :features %>
  <%= f.input :information %>
  <%= f.association :programs, as: :check_boxes, label_method: :full_title, value_method: :id %>
  <%= f.association :user, label_method: :full_name, value_method: :id, include_blank: true %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), devices_path, :class => 'btn btn-default' %>
<% end %>
