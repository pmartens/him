<%- model_class = NetworkInterfaceCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")), new_device_network_interface_card_path, :class => 'btn btn-primary' %>
<%= link_to t('.back', :default => t("helpers.links.back")), devices_path, :class => 'btn btn-default'  %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:device_type) %></th>
      <th><%= model_class.human_attribute_name(:chipset) %></th>
      <th><%= model_class.human_attribute_name(:transfer_rate) %></th>
      <th><%= model_class.human_attribute_name(:interface) %></th>
      <th><%= model_class.human_attribute_name(:device_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @network_interface_cards.each do |network_interface_card| %>
      <tr>
        <td><%= link_to network_interface_card.brand, device_network_interface_card_path(@device, network_interface_card) %></td>
        <td><%= network_interface_card.device_type %></td>
        <td><%= network_interface_card.chipset %></td>
        <td><%= network_interface_card.transfer_rate %></td>
        <td><%= network_interface_card.interface %></td>
        <td><%= network_interface_card.device_id %></td>
        <td><%= network_interface_card.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= network_interface_card.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'interfaces', device_network_interface_card_network_interfaces_path(@device, network_interface_card), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_device_network_interface_card_path(@device, network_interface_card), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")), device_network_interface_card_path(@device, network_interface_card), :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>