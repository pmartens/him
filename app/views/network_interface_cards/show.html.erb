<%- model_class = NetworkInterfaceCard -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:brand) %>:</strong></dt>
  <dd><%= @network_interface_card.brand %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_type) %>:</strong></dt>
  <dd><%= @network_interface_card.device_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chipset) %>:</strong></dt>
  <dd><%= @network_interface_card.chipset %></dd>
  <dt><strong><%= model_class.human_attribute_name(:transfer_rate) %>:</strong></dt>
  <dd><%= @network_interface_card.transfer_rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interface) %>:</strong></dt>
  <dd><%= @network_interface_card.interface %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_id) %>:</strong></dt>
  <dd><%= @network_interface_card.device_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), device_network_interface_cards_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_device_network_interface_card_path(@device, @network_interface_card), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")), device_network_interface_card_path(@device, @network_interface_card),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
