    </div>
    <div class="field">
      <%= f.label :chipset %><br>
      <%= f.text_field :chipset %>
    </div>
    <div class="field">
      <%= f.label :transfer_rate %><br>
      <%= f.text_field :transfer_rate %>
    </div>
    <div class="field">
      <%= f.label :interface %><br>
      <%= f.text_field :interface %>
    </div>
    <%= f.hidden_field :device_id %>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>