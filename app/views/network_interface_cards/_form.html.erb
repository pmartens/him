<%= simple_form_for([@device, @network_interface_card], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :brand %>
  <%= f.input :device_type, collection: ['Cable', 'WiFi'], default: 'Cable' %>
  <%= f.input :chipset %>
  <%= f.input :transfer_rate, collection: ['10/100/1000 Mbps', '10/100 Mbps', '10 Mbps'] %>
  <%= f.input :interface %>
  <%= f.input :device_id, as: :hidden  %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), device_network_interface_cards_path, :class => 'btn btn-default' %>
<% end %>
