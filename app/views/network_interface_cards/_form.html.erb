          <h2><%= pluralize(@network_interface_card.errors.count, "error") %> prohibited this device from being saved:</h2>

          <ul>
            <% @network_interface_card.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
