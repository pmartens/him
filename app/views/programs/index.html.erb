<table id="programs">
  <tr>
    <td>
      <h1>Listing programs</h1>
      <table id="datatable">
        <thead>
        <tr>
          <th>In use</th>
          <th>Title</th>
          <th>Version</th>
          <th>OS</th>
          <th>Purchased at</th>
          <th>License</th>
          <th>Properties</th>
          <th>Created at</th>
          <th>Update at</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @programs.each do |program| %>
            <tr>
              <td><%= program.devices.all.count %></td>
              <td><%= program.title %></td>
              <td><%= program.version %></td>
              <td><%= program.os ? 'yes' : 'no' %></td>
              <td><%= program.purchased_at %></td>
              <td><%= program.license %></td>
              <td><%= program.properties %></td>
              <td><%= program.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= program.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= link_to 'Show', program %></td>
              <td><%= link_to 'Edit', edit_program_path(program) %></td>
              <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Program', new_program_path %>
    </td>
  </tr>
</table>