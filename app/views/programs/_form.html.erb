<%= simple_form_for @program, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :version %>
  <%= f.input :purchased_at, :as => :date_picker %>
  <%= f.input :license %>
  <%= f.input :properties %>
  <%= f.input :os, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), programs_path, :class => 'btn btn-default' %>
<% end %>
