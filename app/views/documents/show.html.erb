<%- model_class = Document -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %> <%= @document.name.titleize  %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:document_file_name) %>:</strong></dt>
  <dd><%= link_to @document.document_file_name, @document.document.url, :target => "_blank"  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_content_type) %>:</strong></dt>
  <dd><%= @document.document_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document_file_size) %>:</strong></dt>
  <dd><%= number_to_human_size(@document.document_file_size, precision: 2, separator: ',') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @document.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @document.updated_at.strftime("%Y-%m-%d %H:%M") %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), device_documents_path(@device), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_device_document_path(@device, @document), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")), device_document_path(@device, @document), :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
