<%= simple_form_for @document, html: { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, label: "Document name" %>
  <%= f.input :document, as: :file, html: { class: 'btn-primary'} %>
  <%= f.button :submit, class: 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), documents_path(@document), :class => 'btn btn-default' %>
<% end %>
