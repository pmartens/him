<%= simple_form_for([@device, @document], :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :document, as: :file, html: { class: 'btn-primary'} %>
  <%= f.input :device_id, as: :hidden %>

  <%= f.button :submit, class: 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), device_documents_path(@device), :class => 'btn btn-default' %>
<% end %>
