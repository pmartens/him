<table id="network_interfaces">
  <tr>
    <td>
      <h1>Documents for <%= @device.name %></h1>
      <table id="datatable">
        <thead>
        <tr>
          <th>Document</th>
          <th>Created at</th>
          <th>Update at</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @documents.each do |d| %>
            <tr>
              <td><%= link_to d.document_file_name, d.document.url, :target => "_blank" %></td>
              <td><%= d.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= d.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= link_to 'Show', device_document_path(@device, d) %></td>
              <td><%= link_to 'Edit', edit_device_document_path(@device, d) %></td>
              <td><%= link_to 'Destroy', device_document_path(@device, d), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Document', new_device_document_path(params[:device_id]) %>
    </td>
  </tr>
</table>