<%= simple_form_for([@device, @network_interface_card, @network_interface], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :interface %>
  <%= f.input :roomnumber %>
  <%= f.input :ip, placeholder: 'xxx.xxx.xxx.xxx' %>
  <%= f.input :subnet, placeholder: 'xxx.xxx.xxx.xxx' %>
  <%= f.input :router, placeholder: 'xxx.xxx.xxx.xxx' %>
  <%= f.input :dns, placeholder: 'xxx.xxx.xxx.xxx, xxx.xxx.xxx.xxx'%>
  <%= f.input :ip6, placeholder: 'xxx.xxx.xxx.xxx' %>
  <%= f.input :router6, placeholder: 'xxx.xxx.xxx.xxx' %>
  <%= f.input :prefix, collection: 1..32 %>
  <%= f.input :domains %>
  <%= f.input :mac, placeholder: 'xx:xx:xx:xx:xx:xx' %>
  <%= f.input :speed, collection: [10, 100, 1000] %>
  <%= f.input :duplex, collection: ['Half', 'Full'] %>
  <%= f.input :dhcp, as: :boolean %>
  <%= f.input :vlan, collection: 0..4094, default: 0 %>
  <%= f.input :online, as: :boolean %>
  <%= f.input :network_interface_card_id, as: :hidden %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), device_network_interface_card_network_interfaces_path, :class => 'btn btn-default' %>
<% end %>
