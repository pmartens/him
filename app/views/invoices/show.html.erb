<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:supplier) %>:</strong></dt>
  <dd><%= @invoice.supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoicetype) %>:</strong></dt>
  <dd><%= @invoice.invoice_type.name unless @invoice.invoice_type.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoicenumber) %>:</strong></dt>
  <dd><%= @invoice.invoicenumber %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoicedate) %>:</strong></dt>
  <dd><%= @invoice.invoicedate.strftime("%Y-%m-%d %H:%M") unless @invoice.invoicedate.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @invoice.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @invoice.user.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @invoice.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @invoice.updated_at.strftime("%Y-%m-%d %H:%M") %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), invoices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_invoice_path(@invoice), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")), invoice_path(@invoice), :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
